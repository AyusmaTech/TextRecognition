<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_spacing"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:minHeight="200dp"
    android:maxHeight="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/preview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />


        <TextView
            android:id="@+id/preview_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/preview_id"
            android:fontFamily="sans-serif"
            android:text="@string/Sample"
            android:textColor="@android:color/black"
            android:typeface="sans" />

        <LinearLayout
            android:id="@+id/icon_layout"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/preview_text">
            <ImageView
                android:id="@+id/icon_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_content_copy_colour_24dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/icon_export"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/export"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/icon_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_colour_24dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:layout_weight="1"/>



        </LinearLayout>





    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>